<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiLibrary="clr-namespace:AzureAIVisionFaceUIHandler;assembly=AzureAIVisionFaceUIHandler"
             x:Class="FaceAnalyzerSample.MainPage">

            <Grid RowDefinitions="*, Auto" ColumnDefinitions="Auto, *, Auto" Padding="20">
                <Button Grid.Row="1" Grid.Column="0" Text="Settings" x:Name="SettingsButton" WidthRequest="150" HeightRequest="50" Clicked="SettingsButton_Clicked"/>
                <Button Grid.Row="1" Grid.Column="2" Text="Start" x:Name="StartButton" WidthRequest="150" HeightRequest="50" Clicked="StartButton_Clicked"/>
            </Grid>
</ContentPage>
